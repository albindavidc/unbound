<%- include('../partials/user/header') %>
<style>
    .userProfileMain {
      width: 80%;
      height: 30%;
      margin: 0 auto;
      background-color: rgb(0, 0, 0);
    }
  
    .userProfileH1 {
      width: 100%;
      margin: 10px;
      font-family: "Baloo", cursive;
      color: white;
      font-size: 6vw;
    }
  
    .breadcrumbCls {
      background-color: rgb(0, 0, 0);
    }
  </style>
  
  <section>
    <div class="container">
      <ol class="breadcrumb breadcrumbCls justify-content-right">
        <li class="breadcrumb-item text-white"><a class="text-white" href="/">Home</a></li>
        <li class="breadcrumb-item active text-white">Order Confirm</li>
      </ol>
    </div>
  
    <div class="pb-5 text-center ">
      <div class="card userProfileMain rounded-pill">
        <h1 class="userProfileH1">Order Confirmed</h1>
      </div>
    </div>
  </section>


<section class="pb-5">
    <div class="container text-center">
        <div class="icon-rounded bg-success-light mb-3 mx-auto text-success">
            <i class="bi bi-check-circle h1"></i>
        </div>
        <h4 class="mb-3 ff-base">Thank you, <%- user.username %>. Your order is confirmed.</h4>
        <h4 class="mb-3 ff-base">Order Id : <%- order %> </h4>
        <p class="text-muted mb-5">Your order hasn't shipped yet but we will send you ane email when it does.</p>
        <p> <a class="btn btn-outline-dark" href="/orders">View or manage your order</a></p>
    </div>
</section>

<%- include('../partials/user/footer') %>